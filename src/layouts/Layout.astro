---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const { 
  title, 
  description = "Summit Craft - AI Solutions Agency. Real AI solutions that actually work for your business. Custom AI copilots, chatbots, and automation workflows.",
  image = "/og-image.jpg",
  canonical 
} = Astro.props;

const canonicalURL = canonical ? new URL(canonical, Astro.site) : Astro.url;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@600;700;800&display=swap" as="style" />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Summit Craft",
      "description": "AI Solutions Agency providing custom AI copilots, chatbots, and automation workflows",
      "url": "https://summitcraft.ai",
      "logo": "https://summitcraft.ai/logo.svg",
      "sameAs": [
        "https://linkedin.com/company/summitcraft",
        "https://twitter.com/summitcraft"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "English"
      }
    })} />
    
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200">
      <div class="container-custom">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-1 group">
            <span class="text-xl font-bold text-black">Summit<sup class="text-xs text-gray-500">®</sup></span>
          </a>
          
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/services" class="text-gray-500 hover:text-black font-medium transition-colors">
              Services
            </a>
            <a href="/case-studies" class="text-gray-500 hover:text-black font-medium transition-colors">
              Case Studies
            </a>
            <a href="/about" class="text-gray-500 hover:text-black font-medium transition-colors">
              About
            </a>
            <a href="/blog" class="text-gray-500 hover:text-black font-medium transition-colors">
              Blog
            </a>
            <a href="/contact" class="text-gray-500 hover:text-black font-medium transition-colors">
              Book Call
            </a>
          </div>

          <!-- Mobile menu button -->
          <button class="md:hidden p-2" id="mobile-menu-button" aria-label="Toggle mobile menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile Navigation -->
        <div class="md:hidden hidden" id="mobile-menu">
          <div class="py-4 space-y-4 border-t border-gray-200">
            <a href="/services" class="block text-gray-500 hover:text-black font-medium transition-colors">
              Services
            </a>
            <a href="/case-studies" class="block text-gray-500 hover:text-black font-medium transition-colors">
              Case Studies
            </a>
            <a href="/about" class="block text-gray-500 hover:text-black font-medium transition-colors">
              About
            </a>
            <a href="/blog" class="block text-gray-500 hover:text-black font-medium transition-colors">
              Blog
            </a>
            <a href="/contact" class="block text-gray-500 hover:text-black font-medium transition-colors">
              Book Call
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="pt-16">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200">
      <div class="container-custom py-16">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <!-- Logo and Description -->
          <div class="col-span-1 md:col-span-2">
            <div class="flex items-center space-x-3 mb-4">
              <span class="text-2xl font-bold text-black">Summit<sup class="text-xs text-gray-500">®</sup></span>
            </div>
            <p class="text-gray-600 max-w-md">
              Real AI solutions that actually work for your business. Built by experts, not experimenters.
            </p>
          </div>
          
          <!-- Services -->
          <div>
            <h4 class="font-semibold text-black mb-4">Services</h4>
            <ul class="space-y-2">
              <li><a href="/services#ai-copilots" class="text-gray-600 hover:text-black transition-colors">AI Copilots</a></li>
              <li><a href="/services#chatbots" class="text-gray-600 hover:text-black transition-colors">Chatbots</a></li>
              <li><a href="/services#automation" class="text-gray-600 hover:text-black transition-colors">Automation</a></li>
            </ul>
          </div>
          
          <!-- Company -->
          <div>
            <h4 class="font-semibold text-black mb-4">Company</h4>
            <ul class="space-y-2">
              <li><a href="/about" class="text-gray-600 hover:text-black transition-colors">About</a></li>
              <li><a href="/case-studies" class="text-gray-600 hover:text-black transition-colors">Case Studies</a></li>
              <li><a href="/blog" class="text-gray-600 hover:text-black transition-colors">Blog</a></li>
              <li><a href="/contact" class="text-gray-600 hover:text-black transition-colors">Contact</a></li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-gray-200 mt-12 pt-8">
          <div class="flex flex-col md:flex-row justify-between items-center">
            <p class="text-gray-600 text-sm">
              © 2024 Summit Craft. All rights reserved.
            </p>
            <div class="flex space-x-6 mt-4 md:mt-0">
              <a href="#" class="text-gray-400 hover:text-gray-600 transition-colors">
                <span class="sr-only">LinkedIn</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.299v15.402C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.299C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
                </svg>
              </a>
              <a href="#" class="text-gray-400 hover:text-gray-600 transition-colors">
                <span class="sr-only">Twitter</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Simple companies carousel without looping
      const companiesContainer = document.getElementById('companies-container');
      const prevBtn = document.getElementById('prev-btn');
      const nextBtn = document.getElementById('next-btn');
      
      if (companiesContainer && prevBtn && nextBtn) {
        let currentIndex = 0;
        const cardWidth = 320 + 32; // card width (w-80 = 320px) + gap (32px)
        const totalCards = 5;
        
        function updateCarousel() {
          const transform = -currentIndex * cardWidth;
          companiesContainer.style.transform = `translateX(${transform}px)`;
          
          // Update button states
          prevBtn.disabled = currentIndex === 0;
          nextBtn.disabled = currentIndex >= totalCards - 1;
          
          // Visual feedback for disabled state
          if (prevBtn.disabled) {
            prevBtn.classList.add('opacity-50', 'cursor-not-allowed');
          } else {
            prevBtn.classList.remove('opacity-50', 'cursor-not-allowed');
          }
          
          if (nextBtn.disabled) {
            nextBtn.classList.add('opacity-50', 'cursor-not-allowed');
          } else {
            nextBtn.classList.remove('opacity-50', 'cursor-not-allowed');
          }
        }
        
        function nextSlide() {
          if (currentIndex < totalCards - 1) {
            currentIndex++;
            updateCarousel();
          }
        }
        
        function prevSlide() {
          if (currentIndex > 0) {
            currentIndex--;
            updateCarousel();
          }
        }
        
        prevBtn.addEventListener('click', prevSlide);
        nextBtn.addEventListener('click', nextSlide);
        
        // Initialize carousel
        updateCarousel();
      }
    </script>
  </body>
</html>
