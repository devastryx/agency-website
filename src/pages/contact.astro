---
import Layout from '../layouts/Layout.astro';

const url = new URL(Astro.request.url);
const service = url.searchParams.get('service');
---

<Layout 
  title="Contact Flow State Labs | Book Your Free AI Strategy Call"
  description="Ready to transform your business with AI? Book a free 30-minute strategy call with our AI experts."
>
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-br from-neutral-50 to-white">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-primary-800 mb-6">
        Let's Build Your AI Future
      </h1>
      <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
        Book a free 30-minute strategy call. We'll analyze your business, identify AI opportunities, and create a roadmap for measurable results.
      </p>
      
      {service && (
        <div class="inline-block bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium mb-8">
          Selected Service: {service === 'ai-copilots' ? 'AI Copilots' : 
                           service === 'chatbots' ? 'Smart Chatbots' : 
                           service === 'automation' ? 'AI Automation' : 
                           service === 'integration' ? 'Strategic Integration' : service}
        </div>
      )}
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-primary-800 mb-6">
            Get Started Today
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            Fill out the form below and we'll get back to you within 24 hours to schedule your strategy call.
          </p>
          
          <!-- Web3Forms Integration -->
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            id="form"
            class="needs-validation space-y-6"
            data-astro-reload
            novalidate>
            
            <!-- Add your Web3Forms Access Key -->
            <input type="hidden" name="access_key" value="e96ae875-ae71-4717-8030-0a58cc81878b" />
            
            <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
            
            <!-- Service Selection (if coming from service page) -->
            {service && (
              <input type="hidden" name="selected_service" value={service} />
            )}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="firstName" class="block text-sm font-medium text-neutral-700 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  placeholder="First Name"
                  required
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                />
                <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                  Please provide your first name.
                </div>
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-neutral-700 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  placeholder="Last Name"
                  required
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                />
                <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                  Please provide your last name.
                </div>
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                Email Address *
              </label>
              <input
                id="email"
                type="email"
                placeholder="Email Address"
                name="email"
                required
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
              <div class="empty-feedback text-red-400 text-sm mt-1">
                Please provide your email address.
              </div>
              <div class="invalid-feedback text-red-400 text-sm mt-1">
                Please provide a valid email address.
              </div>
            </div>
            
            <div>
              <label for="company" class="block text-sm font-medium text-neutral-700 mb-2">
                Company Name *
              </label>
              <input
                type="text"
                id="company"
                placeholder="Company Name"
                name="company"
                required
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
              <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                Please provide your company name.
              </div>
            </div>
            
            <div>
              <label for="projectDetails" class="block text-sm font-medium text-neutral-700 mb-2">
                Tell us about your project or goals *
              </label>
              <textarea
                id="projectDetails"
                name="projectDetails"
                required
                placeholder="Describe what you're looking to achieve with AI..."
                rows="4"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              ></textarea>
              <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                Please tell us about your project or goals.
              </div>
            </div>
            
            <button 
              type="submit" 
              class="w-full btn-primary text-lg py-4"
            >
              Send Message & Schedule Call
            </button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 border border-primary-200">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Get in Touch
            </h3>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-primary-800">Email</p>
                  <p class="text-primary-700">hello@flowstatelabs.ai</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-primary-800">Location</p>
                  <p class="text-primary-700">San Francisco, CA</p>
                  <p class="text-primary-700">Remote-first company</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-neutral-200">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Schedule Your Free Call
            </h3>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-accent-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              
              <p class="text-neutral-600 mb-6">
                Choose your preferred time slot for a personalized 30-minute strategy session
              </p>
              
              <a href="#" class="btn-accent w-full">
                Open Calendar
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Modern Push Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-3"></div>
</Layout>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }

  /* Modern Push Notification Styles */
  .notification-card {
    @apply bg-white border border-gray-200 rounded-xl shadow-2xl max-w-sm w-80 transform transition-all duration-500 ease-out;
    animation: slideInRight 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.95);
  }

  .notification-card.sending {
    @apply border-blue-200 bg-gradient-to-r from-blue-50 to-blue-100;
    box-shadow: 0 20px 25px -5px rgba(59, 130, 246, 0.1), 0 10px 10px -5px rgba(59, 130, 246, 0.04);
  }

  .notification-card.success {
    @apply border-emerald-200 bg-gradient-to-r from-emerald-50 to-emerald-100;
    box-shadow: 0 20px 25px -5px rgba(16, 185, 129, 0.1), 0 10px 10px -5px rgba(16, 185, 129, 0.04);
  }

  .notification-card.error {
    @apply border-red-200 bg-gradient-to-r from-red-50 to-red-100;
    box-shadow: 0 20px 25px -5px rgba(239, 68, 68, 0.1), 0 10px 10px -5px rgba(239, 68, 68, 0.04);
  }

  .notification-header {
    @apply flex items-center justify-between p-4 pb-3;
  }

  .notification-icon {
    @apply w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0;
  }

  .notification-card.sending .notification-icon {
    @apply bg-blue-500 text-white;
  }

  .notification-card.success .notification-icon {
    @apply bg-emerald-500 text-white;
  }

  .notification-card.error .notification-icon {
    @apply bg-red-500 text-white;
  }

  .notification-close {
    @apply w-6 h-6 rounded-full bg-gray-100 hover:bg-gray-200 flex items-center justify-center transition-colors cursor-pointer;
  }

  .notification-body {
    @apply px-4 pb-4;
  }

  .notification-title {
    @apply font-semibold text-gray-900 mb-1;
  }

  .notification-message {
    @apply text-sm text-gray-600 leading-relaxed;
  }

  .notification-progress {
    @apply h-1 bg-gray-200 rounded-full overflow-hidden mt-3;
  }

  .notification-progress-bar {
    @apply h-full transition-all duration-100 ease-linear;
  }

  .notification-card.sending .notification-progress-bar {
    @apply bg-blue-500;
  }

  .notification-card.success .notification-progress-bar {
    @apply bg-emerald-500;
  }

  .notification-card.error .notification-progress-bar {
    @apply bg-red-500;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(100%) scale(0.8);
    }
    to {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
  }

  @keyframes slideOutRight {
    from {
      opacity: 1;
      transform: translateX(0) scale(1);
    }
    to {
      opacity: 0;
      transform: translateX(100%) scale(0.8);
    }
  }

  .slide-out {
    animation: slideOutRight 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  /* Hover effects */
  .notification-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    #notification-container {
      @apply top-2 right-2 left-2;
    }
    
    .notification-card {
      @apply w-full max-w-none;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("form");
    const notificationContainer = document.getElementById("notification-container");

    function createNotification(type, message, title) {
      const iconMap = {
        sending: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`,
        success: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`,
        error: `<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`
      };

      const titleMap = {
        sending: "Sending Message",
        success: "Success!",
        error: "Oops! Something went wrong"
      };

      const messageMap = {
        sending: "We're sending your message...",
        success: message || "Your message has been sent successfully! We'll get back to you within 24 hours.",
        error: message || "There was an issue sending your message. Please try again or contact us directly."
      };

      const notificationId = 'notification-' + Date.now();
      const notification = document.createElement('div');
      notification.id = notificationId;
      notification.className = `notification-card ${type}`;
      
      notification.innerHTML = `
        <div class="notification-header">
          <div class="notification-icon">
            ${iconMap[type]}
          </div>
          <button class="notification-close" onclick="this.closest('.notification-card').remove()">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="notification-body">
          <div class="notification-title">${titleMap[type]}</div>
          <div class="notification-message">${messageMap[type]}</div>
          <div class="notification-progress">
            <div class="notification-progress-bar" style="width: 100%"></div>
          </div>
        </div>
      `;

      notificationContainer.appendChild(notification);

      // Auto-dismiss functionality with progress bar
      if (type !== 'sending') {
        const progressBar = notification.querySelector('.notification-progress-bar');
        const duration = 5000; // 5 seconds
        const interval = 50; // Update every 50ms
        const step = interval / duration;
        let progress = 1;

        const progressInterval = setInterval(() => {
          progress -= step;
          progressBar.style.width = (progress * 100) + '%';
          
          if (progress <= 0) {
            clearInterval(progressInterval);
            dismissNotification(notification);
          }
        }, interval);
      }

      return notification;
    }

    function dismissNotification(notification) {
      notification.classList.add('slide-out');
      setTimeout(() => {
        if (notification.parentNode) {
          notification.remove();
        }
      }, 500);
    }

    function showNotification(type, message, title) {
      return createNotification(type, message, title);
    }

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      form.classList.add("was-validated");
      if (!form.checkValidity()) {
        form.querySelectorAll(":invalid")[0].focus();
        return;
      }
      
      const formData = new FormData(form);
      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);

      const sendingNotification = showNotification('sending');

      fetch("https://api.web3forms.com/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: json,
      })
        .then(async (response) => {
          let json = await response.json();
          if (response.status == 200) {
            // Remove sending notification and show success
            sendingNotification.remove();
            showNotification('success', json.message);
          } else {
            console.log(response);
            sendingNotification.remove();
            showNotification('error', json.message);
          }
        })
        .catch((error) => {
          console.log(error);
          sendingNotification.remove();
          showNotification('error');
        })
        .then(function () {
          form.reset();
          form.classList.remove("was-validated");
        });
    });
  });
</script>
