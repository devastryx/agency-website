---
import Layout from '../layouts/Layout.astro';

const url = new URL(Astro.request.url);
const service = url.searchParams.get('service');
---

<Layout 
  title="Contact Flow State Labs | Book Your Free AI Strategy Call"
  description="Ready to transform your business with AI? Book a free 30-minute strategy call with our AI experts."
>
  <!-- Hero Section -->
  <section class="section-padding bg-gradient-to-br from-neutral-50 to-white">
    <div class="container-custom text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-primary-800 mb-6">
        Let's Build Your AI Future
      </h1>
      <p class="text-xl text-neutral-600 max-w-3xl mx-auto mb-8">
        Book a free 30-minute strategy call. We'll analyze your business, identify AI opportunities, and create a roadmap for measurable results.
      </p>
      
      {service && (
        <div class="inline-block bg-primary-100 text-primary-800 px-4 py-2 rounded-full text-sm font-medium mb-8">
          Selected Service: {service === 'ai-copilots' ? 'AI Copilots' : 
                           service === 'chatbots' ? 'Smart Chatbots' : 
                           service === 'automation' ? 'AI Automation' : 
                           service === 'integration' ? 'Strategic Integration' : service}
        </div>
      )}
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold text-primary-800 mb-6">
            Get Started Today
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            Fill out the form below and we'll get back to you within 24 hours to schedule your strategy call.
          </p>
          
          <!-- Web3Forms Integration -->
          <form
            action="https://api.web3forms.com/submit"
            method="POST"
            id="form"
            class="needs-validation space-y-6"
            data-astro-reload
            novalidate>
            
            <!-- Add your Web3Forms Access Key -->
            <input type="hidden" name="access_key" value="e96ae875-ae71-4717-8030-0a58cc81878b" />
            
            <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
            
            <!-- Service Selection (if coming from service page) -->
            {service && (
              <input type="hidden" name="selected_service" value={service} />
            )}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="firstName" class="block text-sm font-medium text-neutral-700 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  placeholder="First Name"
                  required
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                />
                <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                  Please provide your first name.
                </div>
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-neutral-700 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  placeholder="Last Name"
                  required
                  class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                />
                <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                  Please provide your last name.
                </div>
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">
                Email Address *
              </label>
              <input
                id="email"
                type="email"
                placeholder="Email Address"
                name="email"
                required
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
              <div class="empty-feedback text-red-400 text-sm mt-1">
                Please provide your email address.
              </div>
              <div class="invalid-feedback text-red-400 text-sm mt-1">
                Please provide a valid email address.
              </div>
            </div>
            
            <div>
              <label for="company" class="block text-sm font-medium text-neutral-700 mb-2">
                Company Name *
              </label>
              <input
                type="text"
                id="company"
                placeholder="Company Name"
                name="company"
                required
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              />
              <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                Please provide your company name.
              </div>
            </div>
            
            <div>
              <label for="projectDetails" class="block text-sm font-medium text-neutral-700 mb-2">
                Tell us about your project or goals *
              </label>
              <textarea
                id="projectDetails"
                name="projectDetails"
                required
                placeholder="Describe what you're looking to achieve with AI..."
                rows="4"
                class="w-full px-4 py-3 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
              ></textarea>
              <div class="empty-feedback invalid-feedback text-red-400 text-sm mt-1">
                Please tell us about your project or goals.
              </div>
            </div>
            
            <button 
              type="submit" 
              class="w-full btn-primary text-lg py-4"
            >
              Send Message & Schedule Call
            </button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-8">
          <div class="bg-gradient-to-br from-primary-50 to-primary-100 rounded-2xl p-8 border border-primary-200">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Get in Touch
            </h3>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-primary-800">Email</p>
                  <p class="text-primary-700">hello@flowstatelabs.ai</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-10 h-10 bg-primary-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-primary-800">Location</p>
                  <p class="text-primary-700">San Francisco, CA</p>
                  <p class="text-primary-700">Remote-first company</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-2xl p-8 shadow-lg border border-neutral-200">
            <h3 class="text-2xl font-bold text-primary-800 mb-6">
              Schedule Your Free Call
            </h3>
            
            <div class="text-center">
              <div class="w-16 h-16 bg-accent-100 rounded-full mx-auto mb-4 flex items-center justify-center">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              
              <p class="text-neutral-600 mb-6">
                Choose your preferred time slot for a personalized 30-minute strategy session
              </p>
              
              <a href="#" class="btn-accent w-full">
                Open Calendar
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Snackbar Container -->
  <div id="snackbar" class="fixed bottom-4 left-1/2 transform -translate-x-1/2 z-50"></div>
</Layout>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: #dc3545;
  }

  /* Snackbar Styles */
  .snackbar {
    @apply flex items-center px-4 py-3 rounded-lg shadow-lg border max-w-sm mx-auto transition-all duration-300 ease-out transform;
    animation: slideInUp 0.3s ease-out;
  }

  .snackbar.sending {
    @apply bg-blue-600 border-blue-700 text-white;
  }

  .snackbar.success {
    @apply bg-emerald-600 border-emerald-700 text-white;
  }

  .snackbar.error {
    @apply bg-red-600 border-red-700 text-white;
  }

  .snackbar .icon {
    @apply w-5 h-5 mr-3 flex-shrink-0;
  }

  .snackbar .content {
    @apply flex items-center font-medium text-sm;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translate(-50%, 100%);
    }
    to {
      opacity: 1;
      transform: translate(-50%, 0);
    }
  }

  @keyframes slideOutDown {
    from {
      opacity: 1;
      transform: translate(-50%, 0);
    }
    to {
      opacity: 0;
      transform: translate(-50%, 100%);
    }
  }

  .slide-out {
    animation: slideOutDown 0.3s ease-in-out forwards;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("form");
    const snackbar = document.getElementById("snackbar");

    function showSnackbar(type, message) {
      const iconMap = {
        sending: `<svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`,
        success: `<svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`,
        error: `<svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>`
      };

      const messageMap = {
        sending: "Sending your message...",
        success: message || "Message sent successfully!",
        error: message || "Something went wrong! Please try again."
      };

      snackbar.innerHTML = `
        <div class="snackbar ${type}">
          <div class="content">
            ${iconMap[type]}
            <span>${messageMap[type]}</span>
          </div>
        </div>
      `;
    }

    function hideSnackbar() {
      const snackbarElement = snackbar.querySelector('.snackbar');
      if (snackbarElement) {
        snackbarElement.classList.add('slide-out');
        setTimeout(() => {
          snackbar.innerHTML = '';
        }, 300);
      }
    }

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      form.classList.add("was-validated");
      if (!form.checkValidity()) {
        form.querySelectorAll(":invalid")[0].focus();
        return;
      }
      
      const formData = new FormData(form);
      const object = Object.fromEntries(formData);
      const json = JSON.stringify(object);

      showSnackbar('sending');

      fetch("https://api.web3forms.com/submit", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          Accept: "application/json",
        },
        body: json,
      })
        .then(async (response) => {
          let json = await response.json();
          if (response.status == 200) {
            showSnackbar('success', json.message);
          } else {
            console.log(response);
            showSnackbar('error', json.message);
          }
        })
        .catch((error) => {
          console.log(error);
          showSnackbar('error');
        })
        .then(function () {
          form.reset();
          form.classList.remove("was-validated");
          setTimeout(() => {
            hideSnackbar();
          }, 4000);
        });
    });
  });
</script>
